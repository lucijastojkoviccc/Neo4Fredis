@{
}

<h1>Add Korisnik view</h1>


<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h4>Add new Korisnik</h4>
            <form asp-action="Add" method="POST">
                <div class="form-group">
                    <label asp-for="Ime">Ime</label>
                    <input type="text" class="form-control" asp-for="Ime" />
                    <span asp-validation-for="Ime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prezime">Prezime</label>
                    <input type="text" class="form-control" asp-for="Prezime" />
                    <span asp-validation-for="Prezime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="KorisnickoIme">Korisnicko Ime</label>
                    <input type="textarea" class="form-control" asp-for="KorisnickoIme" />
                    <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email ">Email adresa</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lozinka ">Lozinka</label>
                    <input type="text" class="form-control" asp-for="Lozinka" />
                    <span asp-validation-for="Lozinka" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefon">Telefon</label>
                    <input type="text" class="form-control" asp-for="Telefon" />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>

                @* <div class="form-group">
                <label asp-for="Kategorije ">Kategorije *</label>
                <input type="text" class="form-control" asp-for="Kategorije" />
                <span asp-validation-for="Kategorije" class="text-danger"></span>
                </div>*@


                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit">Register</button>
                    <p><a href="/Login/LoginPage"> Imate nalog? Ulogujte se. </a></p>
                    <p><a href="/Korisnik/SviZainteresovani">Svi Korisnici</a></p>
                </div>
            </form>
        </div>

    </div>
</div>